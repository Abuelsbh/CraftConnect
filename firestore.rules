rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // قواعد المستخدمين
    match /users/{userId} {
      // يمكن للمستخدم قراءة وتحديث بياناته فقط
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // يمكن للمستخدم إنشاء بياناته عند التسجيل
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // قواعد الحرفيين
    match /artisans/{artisanId} {
      // يمكن للجميع قراءة بيانات الحرفيين
      allow read: if true;
      
      // يمكن للحرفي تحديث بياناته فقط
      allow write: if request.auth != null && request.auth.uid == artisanId;
    }
    
    // قواعد الحرف
    match /crafts/{craftId} {
      // يمكن للجميع قراءة الحرف
      allow read: if true;
      
      // يمكن للحرفي إنشاء وتحديث حرفه
      allow write: if request.auth != null && 
        request.auth.uid == resource.data.artisanId;
    }
    
    // قواعد المحادثات
    match /chats/{chatId} {
      // يمكن للمستخدمين المشاركين في المحادثة الوصول إليها
      allow read, write: if request.auth != null && 
        (request.auth.uid in resource.data.participants);
    }
    
    // قواعد الرسائل
    match /chats/{chatId}/messages/{messageId} {
      // يمكن للمستخدمين المشاركين في المحادثة الوصول للرسائل
      allow read, write: if request.auth != null && 
        (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants);
    }
    
    // قواعد التقييمات
    match /reviews/{reviewId} {
      // يمكن للجميع قراءة التقييمات
      allow read: if true;
      
      // يمكن للمستخدم إنشاء تقييم واحد فقط لكل حرفي
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      
      // يمكن للمستخدم تحديث تقييمه فقط
      allow update: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // قواعد الطلبات
    match /orders/{orderId} {
      // يمكن للعميل والحرفي الوصول للطلب
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.customerId || 
         request.auth.uid == resource.data.artisanId);
    }
    
    // قواعد الإشعارات
    match /notifications/{notificationId} {
      // يمكن للمستخدم الوصول لإشعاراته فقط
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // قواعد الملفات الشخصية
    match /profiles/{profileId} {
      // يمكن للمستخدم الوصول لملفه الشخصي فقط
      allow read, write: if request.auth != null && 
        request.auth.uid == profileId;
    }
    
    // قواعد الإعدادات
    match /settings/{settingId} {
      // يمكن للمستخدم الوصول لإعداداته فقط
      allow read, write: if request.auth != null && 
        request.auth.uid == settingId;
    }
  }
} 